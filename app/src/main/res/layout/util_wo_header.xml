<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/headView"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/width_48"
    android:paddingEnd="@dimen/width_48"
    android:layout_width="match_parent"
    android:paddingTop="@dimen/height_144">

    <RelativeLayout
        android:id="@+id/up_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y288">
    <!--名字-->
        <FrameLayout
            android:layout_toLeftOf="@+id/head_image"
            android:layout_marginRight="@dimen/width_48"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/name1"
                android:paddingTop="1px"
                android:paddingStart="1px"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="@color/b0"
                android:text="@string/app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/name2"
                android:textSize="17sp"
                android:textColor="@color/w0"
                android:textStyle="bold"
                android:text="@string/app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </FrameLayout>

    <!--头像-->
    <com.xiaoshangxing.utils.layout.CirecleImage
        android:id="@+id/head_image"
        android:src="@mipmap/cirecleimage_default"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_width="@dimen/x228"
        android:layout_height="@dimen/y228" />


        <!--&lt;!&ndash;新消息&ndash;&gt;-->
            <!--<TextView-->
                <!--android:id="@+id/news"-->
                <!--android:background="@drawable/lay_circular_g1"-->
                <!--android:layout_marginStart="@dimen/x8"-->
                <!--android:padding="6dp"-->
                <!--android:textSize="13sp"-->
                <!--android:textColor="@color/w0"-->
                <!--android:layout_centerVertical="true"-->
                <!--android:gravity="center_vertical"-->
                <!--android:text="1条新消息"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content" />-->

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="@dimen/y78"
        android:layout_marginBottom="@dimen/y34"
        android:id="@+id/news_lay"
        android:orientation="horizontal"
        android:paddingStart="@dimen/x9"
        android:paddingEnd="@dimen/x82"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/news_bj"
        android:layout_below="@+id/up_layout"
        android:layout_width="@dimen/x426"
        android:layout_height="@dimen/y102">

        <com.xiaoshangxing.utils.layout.CirecleImage
            android:id="@+id/news_head"
            android:layout_centerVertical="true"
            android:src="@mipmap/cirecleimage_default"
            android:layout_width="@dimen/x84"
            android:layout_height="@dimen/y84" />

        <TextView
            android:id="@+id/news"
            android:textSize="13sp"
            android:textColor="@color/w0"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="end"
            android:text="1条新消息"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</RelativeLayout>