<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/cancel"
        style="@style/green1_16sp"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/y124"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/x24"
        android:text="@string/cancle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/height_48"
        android:text="填写你想申请的学校"
        android:textColor="@color/b0"
        android:textSize="23sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y126"
        android:layout_marginTop="@dimen/y126"
        android:orientation="vertical">

        <EditText
            android:id="@+id/input_school"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/width_48"
            android:hint="输入学校全称"
            android:textColor="@color/b0"
            android:textSize="16sp" />
    </LinearLayout>

    <Button
        android:id="@+id/appeal_open"
        style="@style/long_btn"
        android:layout_marginTop="@dimen/y84"
        android:alpha="0.5"
        android:enabled="true"
        android:text="@string/appeal_open" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/y36"
        android:clickable="false"
        android:text="感谢你对校上行的支持!"
        android:textColor="@color/g2"
        android:textSize="14sp" />

</LinearLayout>