    <!--三个模块-->
    <LinearLayout
        android:paddingTop="@dimen/y35"
        android:paddingBottom="@dimen/y10"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--群聊-->
        <LinearLayout
            android:id="@+id/group"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/friend_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="群聊"
                android:layout_gravity="center_horizontal"
                android:textSize="13sp"
                android:textColor="@color/g0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/group_count"
                android:text="2"
                android:layout_gravity="center_horizontal"
                android:textSize="13sp"
                android:textColor="@color/g0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <View
            android:layout_gravity="center_vertical"
            android:background="@color/g1"
            android:layout_width="1px"
            android:layout_height="@dimen/y86">

        </View>

        <!--留心-->
        <LinearLayout
            android:id="@+id/love"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/friend_love"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="留心"
                android:layout_gravity="center_horizontal"
                android:textSize="13sp"
                android:textColor="@color/g0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/love_count"
                android:text="2"
                android:layout_gravity="center_horizontal"
                android:textSize="13sp"
                android:textColor="@color/g0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <View
            android:layout_gravity="center_vertical"
            android:background="@color/g1"
            android:layout_width="1px"
            android:layout_height="@dimen/y86">

        </View>

        <!--星星-->
        <LinearLayout
            android:id="@+id/star"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/friend_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="星星"
                android:layout_gravity="center_horizontal"
                android:textSize="13sp"
                android:textColor="@color/g0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/star_count"
                android:text="2"
                android:layout_gravity="center_horizontal"
                android:textSize="13sp"
                android:textColor="@color/g0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

