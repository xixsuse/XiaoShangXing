<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/w3"
    android:orientation="vertical">

    <!--导航栏-->
    <RelativeLayout
        android:id="@+id/title_lay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_144"
        android:background="@color/w0"
        android:paddingEnd="@dimen/width_48"
        android:paddingStart="@dimen/width_48">

        <!--返回-->
        <LinearLayout
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/left_arrow_black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/x12"
                android:text="@string/xiaoshang"
                android:textColor="@color/b0"
                android:textSize="15sp" />

        </LinearLayout>
        <!--校友互帮-->
        <TextView
            android:id="@+id/myState"
            style="@style/black_16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/shoolfellowhelp" />

        <!--点点点-->
        <ImageView
            android:id="@+id/more"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/three_dot_black" />
    </RelativeLayout>

    <!--分割线-->
    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/title_lay"
        android:background="@color/g1">

    </View>

    <!--listview-->
    <com.xiaoshangxing.utils.pull_refresh.PtrFrameLayout xmlns:cube_ptr="http://schemas.android.com/apk/res-auto"
        android:layout_below="@+id/line"
        android:id="@+id/reflesh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        cube_ptr:ptr_duration_to_close="200"
        cube_ptr:ptr_duration_to_close_header="1000"
        cube_ptr:ptr_keep_header_when_refresh="true"
        cube_ptr:ptr_pull_to_fresh="false"
        cube_ptr:ptr_ratio_of_header_height_to_refresh="1.2"
        cube_ptr:ptr_resistance="1.7">

        <ListView
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:cacheColorHint="@color/transparent"
            android:divider="@color/transparent"
            android:dividerHeight="@dimen/height_48"
            android:fadingEdge="none"
            android:footerDividersEnabled="false"
            android:headerDividersEnabled="false"
            android:listSelector="@color/transparent"
            android:overScrollMode="never"
            android:scrollbars="none"
            android:transcriptMode="normal">

        </ListView>

    </com.xiaoshangxing.utils.pull_refresh.PtrFrameLayout>

    <!--公告规则-->

    <RelativeLayout
        android:id="@+id/rules"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/line"
        android:visibility="gone">
        <!--蒙版-->
        <View
            android:id="@+id/mengban"
            android:alpha="0.5"
            android:background="@color/b0"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </View>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <ScrollView
                android:alpha="0.95"
                android:background="@color/w1"
                android:paddingEnd="@dimen/width_48"
                android:paddingStart="@dimen/width_48"
                android:layout_marginEnd="@dimen/x24"
                android:layout_marginStart="@dimen/x24"
                android:paddingTop="@dimen/y66"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/collasp"
                android:overScrollMode="never"
                android:scrollbars="none">

                <TextView
                    android:id="@+id/content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/help_rules"
                    android:textColor="@color/b0"
                    android:textSize="15sp" />
            </ScrollView>

            <LinearLayout
                android:layout_marginEnd="@dimen/x24"
                android:layout_marginStart="@dimen/x24"
                android:id="@+id/collasp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/y102"
                android:orientation="vertical">
                <View
                    android:alpha="0.95"
                    android:background="@color/w1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y102">

                </View>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/rules_up" />


            </LinearLayout>


        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>