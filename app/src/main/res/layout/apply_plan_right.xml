<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/total_lay"
        android:layout_width="@dimen/x752"
        android:layout_height="@dimen/y523"
        android:background="@mipmap/apply_plan_leftblock"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/up_lay1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/x5"
            android:paddingTop="@dimen/y10">

            <LinearLayout
                android:id="@+id/up_layout"
                android:layout_width="@dimen/x640"
                android:layout_height="@dimen/y218"
                android:layout_marginStart="@dimen/x20"
                android:background="@color/w1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/x87"
                    android:layout_marginTop="@dimen/y8"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/app_name"
                        android:textColor="@color/b0"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/college"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/x18"
                        android:text="物联网"
                        android:textColor="@color/g0"
                        android:textSize="10sp" />

                </LinearLayout>

                <com.xiaoshangxing.input_activity.EmotionEdittext.EmotinText
                    android:id="@+id/text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/y40"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:paddingEnd="@dimen/x22"
                    android:paddingStart="@dimen/x27"
                    android:text="@string/longtext" />

            </LinearLayout>

            <com.xiaoshangxing.utils.layout.CirecleImage
                android:id="@+id/head_image"
                android:layout_width="@dimen/x82"
                android:layout_height="@dimen/x82"
                android:src="@mipmap/greyblock" />

            <TextView
                android:id="@+id/state_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/up_layout"
                android:layout_marginStart="@dimen/x20"
                android:layout_marginTop="@dimen/y40"
                android:singleLine="true"
                android:text="我已申请加入计划,等待对方回应..."
                android:textColor="@color/b0"
                android:textSize="13sp" />


        </RelativeLayout>

        <View
            android:id="@+id/horizontal_line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginStart="@dimen/x20"
            android:layout_marginTop="@dimen/y54"
            android:background="@color/g1">

        </View>

        <LinearLayout
            android:id="@+id/bellow_lay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/x20"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/refuse"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="拒绝"
                    android:textColor="@color/b0"
                    android:textSize="15sp" />

            </FrameLayout>

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/g1">

            </View>

            <FrameLayout
                android:id="@+id/agree"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="同意"
                    android:textColor="@color/green1"
                    android:textSize="15sp" />
            </FrameLayout>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>