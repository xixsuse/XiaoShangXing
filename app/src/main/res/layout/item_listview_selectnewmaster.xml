<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/w3"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <TextView
        android:id="@+id/catalog"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/y60"
        android:layout_weight="1.0"
        android:background="@color/w3"
        android:paddingStart="@dimen/x48"
        android:text="A"
        android:textColor="@color/g0" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginEnd="@dimen/width_48"
        android:layout_marginStart="@dimen/x24"
        android:background="@color/g1">

    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y160"
        android:background="@color/w1"
        android:orientation="horizontal"
        android:paddingStart="@dimen/x42">


        <com.xiaoshangxing.utils.layout.CirecleImage
            android:id="@+id/head_image"
            android:layout_width="@dimen/x102"
            android:layout_height="@dimen/x102"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/greyblock" />

        <TextView
            android:id="@+id/name"
            style="@style/black_16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x30"
            android:gravity="center_vertical"
            android:text="hhhh" />

    </LinearLayout>

</LinearLayout>