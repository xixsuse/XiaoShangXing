<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/w3"
    android:orientation="vertical">

    <!--标题栏-->
    <LinearLayout
        android:id="@+id/back"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y184"
        android:background="@color/b2"
        android:paddingEnd="@dimen/x24"
        android:paddingStart="@dimen/x24">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--返回-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/left_arrow_white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingStart="@dimen/x12"
                    android:text="@string/back"
                    android:textColor="@color/w0"
                    android:textSize="15sp" />
            </LinearLayout>

            <!--邮箱验证找回-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:text="@string/retrieve_by_emain2"
                android:textColor="@color/w0"
                android:textSize="17sp" />

        </RelativeLayout>


    </LinearLayout>

    <!--图片-->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/y216"
        android:src="@mipmap/no_email" />

    <!--你还没有绑定邮箱-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/y120"
        android:text="@string/you_have_no_email"
        android:textColor="@color/b0"
        android:textSize="17sp"
        android:textStyle="bold" />

    <!--绑定邮箱可以登录校上行-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/y52"
        android:text="@string/you_have_no_email_notice"
        android:textColor="@color/g0"
        android:textSize="13sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/appeal_by_self"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/y66"
            android:text="@string/appeal_by_self"
            android:textColor="@color/blue1"
            android:textSize="14sp" />

    </RelativeLayout>
</LinearLayout>