<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_surround_info_zhuanfa"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y475"
            android:orientation="vertical"
            android:background="@color/w3">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textColor="@color/b4"
                android:layout_marginTop="@dimen/y24"
                android:text="网页由mp.xiaoshangxing.com提供"
                android:textSize="11sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/y94"
                >
                <LinearLayout

                    android:id="@+id/ll_shareFriends"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x48"
                    android:visibility="gone"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/ib_zfhy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:layout_centerHorizontal="true"
                        android:src="@mipmap/fenxiang"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:textColor="@color/b4"
                        android:layout_marginTop="@dimen/y24"
                        android:layout_gravity="center_horizontal"
                        android:text="发送给好友"/>
                </LinearLayout>
                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x48"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/ib_AK_zfxyq"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:layout_centerHorizontal="true"
                        android:src="@mipmap/qu_xsx"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:textColor="@color/b4"
                        android:layout_marginTop="@dimen/y24"
                        android:layout_gravity="center_horizontal"
                        android:text="分享到
校友圈"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="@dimen/x30"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/ib_AK_zfwx"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/weixin"
                        android:layout_centerHorizontal="true"
                        />
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:textColor="@color/b4"
                        android:layout_marginTop="@dimen/y24"
                        android:layout_gravity="center_horizontal"
                        android:text="分享到微信"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="@dimen/x30"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/ib_AK_zfwb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:layout_centerHorizontal="true"
                        android:src="@mipmap/weibo"
                      />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:textColor="@color/b4"
                        android:layout_marginTop="@dimen/y24"
                        android:layout_gravity="center_horizontal"
                        android:layout_centerHorizontal="true"
                        android:text="分享到微博"/>
              </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="@dimen/x30"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/ib_AK_zfqq"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:layout_centerHorizontal="true"
                        android:src="@mipmap/qq"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:textColor="@color/b4"
                        android:layout_marginTop="@dimen/y24"
                        android:layout_gravity="center_horizontal"
                        android:layout_centerHorizontal="true"
                        android:text="分享到QQ"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    <Button
        android:id="@+id/btn_surround_info_cancel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y123"
        android:background="@color/w1"
        android:textColor="@color/b4"
        android:layout_marginTop="@dimen/y20"
        android:textSize="17sp"
        android:text="取消"/>
</LinearLayout>