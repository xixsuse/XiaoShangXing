<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/w0"
        android:id="@+id/rl_mytitle"
        >
        <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/back"
            android:layout_marginLeft="@dimen/x24"
            android:layout_centerVertical="true"
            android:drawableLeft="@mipmap/arrowleftblack"
            android:text="返回"
            android:textSize="48px"
            android:drawablePadding="@dimen/x12"
            android:gravity="left|center_vertical"
            android:textColor="@android:color/black"
            android:background="@android:color/transparent"
            />
        <TextView android:id="@+id/textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@android:color/black"
            android:layout_centerInParent="true"
            android:textSize="52px"
            android:text="校历资讯"
            />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginTop="@dimen/y40"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40px"
            android:text="计划名称:"
            android:textColor="@color/g0"/>
        <EditText
            android:id="@+id/et_planName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textSize="40px"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginTop="@dimen/y10"
        android:background="@color/g1"></View>
    <EditText
        android:id="@+id/et_plan_info"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y400"
        android:paddingLeft="@dimen/x30"
        android:gravity="start"
        android:hint="输入计划详情"
        android:textSize="40px"
        android:layout_marginTop="@dimen/y10"
        android:textCursorDrawable="@drawable/add_calender_info_cursor"
        android:background="@null"/>
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_marginLeft="@dimen/x35"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:textColor="@android:color/black"
        android:layout_height="wrap_content"
        android:text="限制人数"
        android:textSize="35px"/>
    <EditText
        android:id="@+id/et_limitNumber"
        android:layout_width="80px"
        android:layout_height="wrap_content"
        android:background="@drawable/et_half_circle"
        android:layout_marginLeft="20px"/>
    <TextView
        android:layout_width="wrap_content"
        android:textColor="@android:color/black"
        android:layout_height="wrap_content"
        android:text="计划时间"
        android:layout_marginLeft="40px"
        android:textSize="35px"/>
    <EditText
        android:id="@+id/et_planTime"
        android:layout_width="80px"
        android:layout_height="wrap_content"
        android:background="@drawable/et_half_circle"
        android:layout_marginLeft="20px"/>
</LinearLayout>

</LinearLayout>