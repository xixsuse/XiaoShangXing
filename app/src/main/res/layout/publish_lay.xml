<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <!--日期-->
    <LinearLayout
        android:id="@+id/date"
        android:layout_width="@dimen/x220"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:textStyle="bold"
            android:text="今天"
            android:textColor="@color/b0"
            android:textSize="25sp" />
    </LinearLayout>


    <!--说点什么吧-->
    <RelativeLayout
        android:id="@+id/publish"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/y66"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/y6"
        android:visibility="visible">

        <ImageView
            android:id="@+id/say_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:src="@mipmap/publish_state" />

        <TextView
            android:id="@+id/say_something"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/x18"
            android:layout_toRightOf="@+id/say_image"
            android:ellipsize="end"
            android:text="记录点什么"
            android:textColor="@color/blue1"
            android:textSize="15sp" />

    </RelativeLayout>


</LinearLayout>