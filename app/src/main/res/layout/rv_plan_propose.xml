<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y540"
    android:layout_marginTop="@dimen/y42"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/fl_plan_list"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y420"
            android:layout_marginTop="@dimen/y12"
            android:layout_marginLeft="@dimen/x48"
            android:layout_marginRight="@dimen/x48">
        <LinearLayout
            android:id="@+id/userInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/plan_list_background"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >
                <LinearLayout
                    android:id="@+id/me_usermsg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:layout_marginTop="3dp"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:id="@+id/ll_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical" >

                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="孙路阳"
                            android:layout_marginLeft="@dimen/x144"
                            android:textColor="@color/blue1"
                            android:textSize="15sp" />
                        <TextView
                            android:id="@+id/tv_plan_list_academy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="设计学院"
                            android:layout_marginLeft="@dimen/x24"
                            android:textColor="#888888"
                            android:textSize="13sp" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical" >

                        <ImageButton
                            android:id="@+id/ib_reward_downArrow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/qu_xsx_arrow_down"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="6dp"
                            android:background="@android:color/transparent"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center_vertical|right" >
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_plan_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:lineSpacingExtra="3dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/x66"
                android:layout_marginTop="@dimen/y60"
                android:ellipsize="end"
                android:text="#春游小分队"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_plan_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:lineSpacingExtra="3dp"
                android:minLines="2"
                android:layout_marginTop="@dimen/y18"
                android:layout_marginLeft="@dimen/x66"
                android:layout_alignParentLeft="true"
                android:ellipsize="end"
                android:layout_marginBottom="@dimen/x69"
                android:text="明日天气晴朗，适合出游哦"
                android:textSize="14sp" />

        </LinearLayout>
            <ImageView
                android:id="@+id/iv_complete"
                android:layout_width="@dimen/x155"
                android:layout_height="@dimen/y188"
                android:layout_marginTop="@dimen/y30"
                android:layout_marginRight="@dimen/x76"
                android:visibility="gone"
                android:src="@mipmap/plan_complete"
                android:background="@android:color/transparent"
                android:layout_gravity="end"/>
            <ImageButton
                android:id="@+id/btn_complete"
                android:layout_width="@dimen/x90"
                android:layout_height="@dimen/y60"
                android:scaleType="centerCrop"
                android:layout_gravity="bottom|right"
                android:visibility="gone"
                />
            <CheckBox
                android:focusable="false"
                android:id="@+id/checkbox"
                android:button="@null"
                android:visibility="gone"
                android:background="@drawable/selector_myhelp_more"
                android:layout_gravity="end|bottom"
                android:layout_marginBottom="@dimen/y6"
                android:layout_marginRight="@dimen/x12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </FrameLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x48"
            android:layout_marginRight="@dimen/x48"
            android:layout_marginTop="@dimen/y30"
            >
            <TextView
                android:id="@+id/tv_list_plan_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20分钟前"
                android:textSize="11sp"
                android:layout_centerVertical="true"
                android:textColor="@color/b3"/>
            <TextView
                android:id="@+id/tv_list_plan_renshu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv_list_plan_time"
                android:text="0-1人"
                android:layout_marginLeft="48px"
                android:textColor="@color/b3"/>
            <TextView
                android:id="@+id/tv_full"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/red2"
                android:textSize="11sp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:text="(满员)"/>
            <TextView
                android:id="@+id/tv_enter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/b3"
                android:textSize="11sp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/tv_full"
                android:text="人已加入"/>
            <TextView
                android:id="@+id/tv_participate_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/green2"
                android:layout_toLeftOf="@+id/tv_enter"
                android:layout_centerVertical="true"
                android:layout_marginBottom="10px"
                android:text="1"/>

        </RelativeLayout>
    </LinearLayout>
    <com.xiaoshangxing.utils.layout.CirecleImage
        android:id="@+id/iv_headImage"
        android:layout_width="@dimen/x126"
        android:layout_height="@dimen/y126"
        android:layout_marginLeft="@dimen/x30"
        android:clickable="false"
        android:focusable="false"
        android:scaleType="centerCrop"
        android:src="@mipmap/cirecleimage_default" />

</FrameLayout>