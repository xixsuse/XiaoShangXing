<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/w0"
    android:layout_marginTop="@dimen/y60">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <com.xiaoshangxing.utils.layout.CirecleImage
            android:id="@+id/iv_headImage"
            android:layout_width="@dimen/x126"
            android:layout_height="@dimen/x126"
            android:layout_marginTop="@dimen/y24"
            android:layout_marginLeft="@dimen/x36"
            android:clickable="false"
            android:focusable="false"
            android:scaleType="centerCrop"
            android:src="@mipmap/cirecleimage_default" />
        <TextView
            android:id="@+id/tv_xzcs_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="有没有刘传凯的二手书"
            android:textSize="13dp"
            android:maxLines="3"
            android:ellipsize="end"
            android:layout_marginLeft="@dimen/x21"
            android:layout_marginRight="@dimen/x21"
            android:layout_gravity="center_vertical"
            android:textColor="@android:color/black"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="@dimen/x160"
            android:layout_marginLeft="@dimen/x18"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_xzcs_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="孙路阳"
                android:layout_marginTop="@dimen/y18"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="@color/blue1"/>
            <TextView
                android:id="@+id/tv_academy_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="设计学院"
                android:layout_marginTop="@dimen/y12"
                android:maxLength="4"
                android:ellipsize="end"
                android:maxLines="1"
                android:gravity="center"
                android:textSize="13sp"
                android:textColor="@android:color/black"/>
            <TextView
                android:id="@+id/tv_release_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="发布时间"
                android:layout_marginTop="@dimen/y12"
                android:ellipsize="end"
                android:maxLines="1"
                android:gravity="center"
                android:textSize="13sp"
                android:textColor="@color/g0"/>
            <TextView
                android:id="@+id/tv_dormitory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="园区"
                android:layout_marginTop="@dimen/y12"
                android:gravity="center"
                android:textSize="13sp"
                android:textColor="@android:color/black"/>
            <TextView
                android:id="@+id/tv_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="¥1000"
                android:layout_marginTop="@dimen/y12"
                android:gravity="center"
                android:textSize="13sp"
                android:textColor="@color/red1"/>
        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_image"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/y21"
            android:layout_marginRight="@dimen/x21"
            android:layout_height="@dimen/y277">
        </android.support.v7.widget.RecyclerView>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/y21"
     >
        <CheckBox
            android:focusable="false"
            android:id="@+id/checkbox"
            android:button="@null"
            android:visibility="gone"
            android:background="@drawable/selector_myhelp_more"
            android:layout_gravity="end|bottom"
            android:layout_marginBottom="@dimen/y6"
            android:layout_marginRight="@dimen/x12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/iv_idle_shiliao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/yimai"
           android:layout_gravity="end"
            android:layout_marginLeft="@dimen/x15"
            android:textColor="@android:color/white"
            android:textSize="13sp"
            android:layout_marginRight="@dimen/x27"
            />
    </FrameLayout>

</LinearLayout>