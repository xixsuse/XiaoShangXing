<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/w3"
    android:orientation="vertical">

    <!--导航栏-->
    <RelativeLayout
        android:id="@+id/title_lay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_144"
        android:background="@color/w0"
        android:paddingEnd="@dimen/width_48"
        android:paddingStart="@dimen/width_48">

        <!--返回-->
        <LinearLayout
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/left_arrow_black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/x12"
                android:text="@string/xiaoshang"
                android:textColor="@color/b0"
                android:textSize="15sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/title"
            style="@style/black_16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="校历资讯" />

        <!--点点点-->
        <ImageView
            android:id="@+id/more"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/nav_add" />
    </RelativeLayout>

    <!--listview-->
    <com.xiaoshangxing.utils.pull_refresh.PtrFrameLayout xmlns:cube_ptr="http://schemas.android.com/apk/res-auto"
        android:id="@+id/reflesh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_layout"
        android:layout_below="@+id/title_lay"
        cube_ptr:ptr_duration_to_close="200"
        cube_ptr:ptr_duration_to_close_header="1000"
        cube_ptr:ptr_keep_header_when_refresh="true"
        cube_ptr:ptr_pull_to_fresh="false"
        cube_ptr:ptr_ratio_of_header_height_to_refresh="1.2"
        cube_ptr:ptr_resistance="1.7">

        <ListView
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/width_48"
            android:layout_marginStart="@dimen/width_48"
            android:cacheColorHint="@color/transparent"
            android:divider="@color/transparent"
            android:dividerHeight="@dimen/height_48"
            android:fadingEdge="none"
            android:footerDividersEnabled="false"
            android:headerDividersEnabled="false"
            android:listSelector="@color/transparent"
            android:overScrollMode="never"
            android:scrollbars="none"
            android:transcriptMode="normal">

        </ListView>


    </com.xiaoshangxing.utils.pull_refresh.PtrFrameLayout>



    <!--当前日期-->
    <RelativeLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y126"
        android:layout_alignParentBottom="true"
        android:background="@color/w1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/calender_log"
            android:layout_width="@dimen/x52"
            android:layout_height="@dimen/y44"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x48"
            android:src="@mipmap/calender_black" />

        <TextView
            android:id="@+id/tv_nowDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x24"
            android:layout_toRightOf="@+id/calender_log"
            android:textColor="@color/g0"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/tv_date_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x38"
            android:layout_toRightOf="@+id/tv_nowDate"
            android:textColor="@color/g0"
            android:textSize="17dp" />

        <ImageButton
            android:id="@+id/ib_arrow_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/x36"
            android:background="@android:color/transparent"
            android:src="@mipmap/up_arrowgrey" />
    </RelativeLayout>

    <!--日历-->
    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:id="@+id/calendar_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/w1"
            android:orientation="vertical"
            app:layout_behavior="@string/bottom_sheet_behavior">


            <RelativeLayout
                android:id="@+id/up_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y132"
                android:layout_marginEnd="@dimen/x46"
                android:layout_marginStart="@dimen/x36"
                android:layout_marginTop="@dimen/y42">

                <TextView
                    android:id="@+id/current_month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10月"
                    android:textColor="@color/red1"
                    android:textSize="17sp" />

                <ImageView
                    android:id="@+id/down_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:src="@mipmap/down_arrow_grey" />

            </RelativeLayout>

            <com.prolificinteractive.materialcalendarview.MaterialCalendarView
                android:id="@+id/calendarView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/next_month"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y132"
                android:layout_marginStart="@dimen/x36"
                android:layout_marginTop="@dimen/y42"
                android:text="11月"
                android:textColor="@color/g0"
                android:textSize="17sp" />

        </LinearLayout>
    </android.support.design.widget.CoordinatorLayout>

</RelativeLayout>