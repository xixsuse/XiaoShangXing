<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y168"
        android:paddingEnd="@dimen/width_48">

        <!--头像-->
        <com.xiaoshangxing.utils.customView.CirecleImage
            android:id="@+id/head_image"
            android:layout_width="@dimen/x132"
            android:layout_height="@dimen/x132"
            android:layout_centerVertical="true"
            android:src="@mipmap/cirecleimage_default" />

        <!--姓名-->
        <TextView
            android:id="@+id/name"
            style="@style/black_16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/head_image"
            android:paddingStart="@dimen/x52"
            android:text="@string/app_name" />
    </RelativeLayout>

</LinearLayout>