<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/w3"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y144"
        android:background="@color/w1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/groupCode_leftarrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x24"
            android:src="@mipmap/left_arrow_black" />

        <TextView
            android:id="@+id/groupCode_back"
            style="@style/black_16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x12"
            android:layout_toRightOf="@id/groupCode_leftarrow"
            android:clickable="true"
            android:text="@string/back" />

        <TextView
            style="@style/black_17sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/groupCode" />

        <ImageView
            android:id="@+id/groupCode_threepoint"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/x48"
            android:src="@mipmap/toolbar_right_threepoint" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:layout_width="@dimen/x984"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@color/w1"
            app:cardCornerRadius="12dp"
            app:cardPreventCornerOverlap="false">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/linear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/x63"
                    android:layout_marginTop="@dimen/y72"
                    android:orientation="horizontal">

                    <com.xiaoshangxing.utils.layout.CirecleImage
                        android:id="@+id/groupImg"
                        android:layout_width="@dimen/x184"
                        android:layout_height="@dimen/x184"
                        android:src="@mipmap/greyblock" />

                    <TextView
                        android:id="@+id/groupName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/x42"
                        android:text="群名称"
                        android:textColor="@color/b0"
                        android:textSize="20sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/groupCode_CodeImg"
                    android:layout_width="@dimen/x829"
                    android:layout_height="@dimen/x829"
                    android:layout_below="@id/linear"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/x126"
                    android:src="@mipmap/greyblock" />
                
                <TextView
                    android:id="@+id/groupCode_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/groupCode_CodeImg"
                    android:layout_marginTop="@dimen/y120"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/y66"
                    android:textSize="14sp"
                    android:textColor="@color/g0"
                    />

            </RelativeLayout>


        </android.support.v7.widget.CardView>
    </RelativeLayout>


</LinearLayout>