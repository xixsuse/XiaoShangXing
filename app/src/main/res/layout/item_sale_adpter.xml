<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y580"
    android:background="@color/w0"
    android:descendantFocusability="afterDescendants">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y580"
        android:orientation="horizontal">

        <!--左侧布局-->
        <LinearLayout
            android:layout_width="@dimen/x183"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--头像-->
            <com.xiaoshangxing.utils.layout.CirecleImage
                android:id="@+id/head_image"
                android:layout_width="@dimen/x120"
                android:layout_height="@dimen/x120"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/y30"
                android:src="@mipmap/cirecleimage_default" />

            <!--姓名-->
            <com.xiaoshangxing.utils.layout.Name
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/y26"
                android:singleLine="true"
                android:textColor="@color/blue1"
                android:textSize="12sp" />

            <!--学院-->
            <TextView
                android:id="@+id/college"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/y20"
                android:singleLine="true"
                android:textColor="@color/b0"
                android:textSize="11sp" />

            <!--时间-->
            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/y26"
                android:singleLine="true"
                android:textColor="@color/g0"
                android:textSize="9sp" />

            <!--园区-->
            <TextView
                android:id="@+id/dorm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/y42"
                android:singleLine="true"
                android:textColor="@color/b0"
                android:textSize="11sp" />

            <!--价格-->
            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/y30"
                android:singleLine="true"
                android:textColor="@color/red1"
                android:textSize="12sp" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/down_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:src="@mipmap/down_arrow_gray" />

            </FrameLayout>

        </LinearLayout>

        <!--右侧布局-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--文字内容-->
            <com.xiaoshangxing.input_activity.EmotionEdittext.EmotinText
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/y168"
                android:layout_marginEnd="@dimen/x21"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="3"
                android:text="@string/longtext"
                android:textColor="@color/b0"
                android:textSize="13sp" />

            <!--图片内容-->
            <com.xiaoshangxing.wo.WoFrafment.NoScrollGridView
                android:id="@+id/pictures"
                android:layout_width="@dimen/x852"
                android:layout_height="@dimen/y272"
                android:columnWidth="@dimen/x272"
                android:gravity="start"
                android:horizontalSpacing="@dimen/x18"
                android:numColumns="3"
                android:stretchMode="columnWidth">

            </com.xiaoshangxing.wo.WoFrafment.NoScrollGridView>

            <!--输入框-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y90"
                android:layout_marginTop="@dimen/y21"
                android:orientation="horizontal">

                <com.xiaoshangxing.input_activity.EmotionEdittext.EmoticonsEditText
                    android:id="@+id/input"
                    android:layout_width="@dimen/x720"
                    android:layout_height="@dimen/y90"
                    android:background="@drawable/et_circular_4_white"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:hint="输入内容点击私聊即可发送"
                    android:paddingLeft="@dimen/x18"
                    android:textCursorDrawable="@drawable/cursor_blue4"
                    android:textSize="13sp" />

                <Button
                    android:id="@+id/chat"
                    android:layout_width="@dimen/x130"
                    android:layout_height="@dimen/y80"
                    android:layout_marginLeft="@dimen/x15"
                    android:layout_marginRight="@dimen/x27"
                    android:background="@drawable/circular_4_g2"
                    android:text="私聊"
                    android:textColor="@android:color/white"
                    android:textSize="13sp" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <!--完成标志-->
    <ImageView
        android:id="@+id/complete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:scaleType="centerCrop"
        android:src="@mipmap/plan_complete"
        android:visibility="invisible" />

</RelativeLayout>