<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.xiaoshangxing.wo.WoFrafment.check_photo.HackyViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/w3" />

    <!--导航栏-->
    <RelativeLayout
        android:id="@+id/title"
        android:background="#2f2c2e"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_144"
        android:paddingEnd="@dimen/x60"
        android:paddingStart="@dimen/width_48">

        <!--返回-->
        <LinearLayout
            android:id="@+id/back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/left_arrow_white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/x12"
                android:text="@string/back"
                android:textColor="@color/w0"
                android:textSize="15sp" />

        </LinearLayout>

        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="@dimen/x84"
            android:layout_height="@dimen/y84"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_margin="6dp"
            android:background="@drawable/selector_picture_big"
            android:button="@null"
            android:focusable="false" />
    </RelativeLayout>



    <!--下方-->
    <RelativeLayout
        android:id="@+id/details_entry_layout"
        android:layout_width="match_parent"
        android:background="@color/w0"
        android:layout_height="@dimen/y144"
        android:layout_alignParentBottom="true">


        <!--发送-->
        <RelativeLayout
            android:id="@+id/complete"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="@dimen/width_48"
            android:background="@color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="@string/complete"
                    android:textColor="@color/green1"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/count"
                    android:text="(1)"
                    android:textColor="@color/green1"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>



</RelativeLayout>
