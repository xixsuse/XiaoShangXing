<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent_lay"
    android:layout_width="@dimen/x546"
    android:layout_height="@dimen/y136"
    android:background="@mipmap/popmenu_yujian2"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y102"
        android:layout_marginBottom="@dimen/y28"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/zhiding"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="center"
            android:text="取消置顶"
            android:textColor="@color/w0"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/delete"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:text="@string/delete"
            android:textColor="@color/w0"
            android:textSize="12sp" />

    </LinearLayout>

</LinearLayout>