<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_height="wrap_content"
        android:background="@color/w0"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/width_48"
        android:layout_width="match_parent">

        <!--头像-->
        <com.xiaoshangxing.utils.layout.CirecleImage
            android:id="@+id/head_image"
            android:layout_width="@dimen/x152"
            android:layout_height="@dimen/x152"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/greyblock" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="@dimen/y30"
            android:layout_marginStart="@dimen/x24"
            android:layout_marginTop="@dimen/y30"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <!--姓名-->
            <com.xiaoshangxing.utils.layout.Name
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textColor="@color/blue1"
                android:textSize="14sp" />

            <FrameLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/y30">

                <ImageView
                    android:id="@+id/praise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/blue_heart"
                    android:visibility="gone" />

                <com.xiaoshangxing.input_activity.EmotionEdittext.EmotinText
                    android:id="@+id/comment_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/longtext"
                    android:visibility="gone" />
            </FrameLayout>

            <!--时间-->
            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y18"
                android:text="上午 10:04"
                android:textColor="@color/g0"
                android:textSize="11sp" />

        </LinearLayout>

        <!--图片或说说-->
        <FrameLayout
            android:id="@+id/right_layout"
            android:layout_width="@dimen/x166"
            android:layout_height="@dimen/x166"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/x120">

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/w2"
                android:scaleType="centerCrop"
                android:src="@mipmap/xueshengzheng"
                android:visibility="gone" />

            <com.xiaoshangxing.input_activity.EmotionEdittext.EmotinText
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/w2"
                android:text="@string/longtext"
                android:textColor="@color/g0"
                android:textSize="8sp"
                android:visibility="gone" />
        </FrameLayout>

    </LinearLayout>


</LinearLayout>