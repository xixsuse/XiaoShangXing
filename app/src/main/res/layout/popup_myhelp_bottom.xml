<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/x546"
    android:layout_height="@dimen/y136"
    android:background="@mipmap/popup_myhelp_bottom"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y102"
        android:layout_marginBottom="@dimen/y34"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/transmit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/transmit"
            android:textColor="@color/w0"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/delete"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/delete"
            android:textColor="@color/w0"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/more"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/more"
            android:textColor="@color/w0"
            android:textSize="13sp" />

    </LinearLayout>

</LinearLayout>