<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/w1"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y144"
        android:background="@color/w1">

        <TextView
            android:id="@+id/groupNoticeEdit_back"
            style="@style/black_16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x48"
            android:clickable="true"
            android:text="@string/cancle" />

        <TextView
            style="@style/black_16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/groupNotice" />

        <TextView
            android:id="@+id/groupNoticeEdit_finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/x48"
            android:alpha="0.5"
            android:text="@string/finish"
            android:textColor="@color/green1"
            android:textSize="16sp" />
    </RelativeLayout>

    <EditText
        android:id="@+id/groupNotice_editText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/y48"
        android:layout_marginEnd="@dimen/x48"
        android:layout_marginStart="@dimen/x48"
        android:layout_marginTop="@dimen/y48"
        android:textSize="13sp"
        android:background="@color/transparent"
        android:gravity="top"
        android:textCursorDrawable="@drawable/cursor_blue4" />


</LinearLayout>