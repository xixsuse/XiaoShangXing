<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:statusBarColor">@color/b0</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:screenOrientation">portrait</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="main_radiobutton">
        <item name="android:gravity">center_horizontal</item>
        <!--<item name="android:layout_weight">1</item>-->
        <item name="android:button">@null</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">@drawable/selector_radiobutton_textcolor</item>
    </style>

    <!--字体大小为16sp 颜色为黑色-->
    <style name="black_16sp">
        <item name="android:textColor">@color/b0</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!--字体大小为17sp 颜色为黑色-->
    <style name="black_17sp">
        <item name="android:textColor">@color/b0</item>
        <item name="android:textSize">17sp</item>
    </style>

    <!--字体大小为15sp 颜色为黑色-->
    <style name="black_15sp">
        <item name="android:textColor">@color/b0</item>
        <item name="android:textSize">15sp</item>
    </style>

    <!--字体大小为16sp 颜色为白色-->
    <style name="white_16sp">
        <item name="android:textColor">@color/w0</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!--字体大小为15sp 颜色为蓝1-->
    <style name="blue1_15sp">
        <item name="android:textColor">@color/blue1</item>
        <item name="android:textSize">15sp</item>
    </style>

    <!--字体大小为15sp 颜色为go-->
    <style name="g0_15sp">
        <item name="android:textColor">@color/g0</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="g0_14sp">
        <item name="android:textColor">@color/g0</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="b1_13sp">
        <item name="android:textColor">@color/b1</item>
        <item name="android:textSize">13sp</item>
    </style>

    <!--字体大小为15sp 颜色为绿1-->
    <style name="green1_15sp">
        <item name="android:textColor">@color/green1</item>
        <item name="android:textSize">15sp</item>
    </style>

    <!--字体大小为16sp 颜色为绿1-->
    <style name="green1_16sp">
        <item name="android:textColor">@color/green1</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!--字体大小为23sp 颜色为黑-->
    <style name="black_23sp">
        <item name="android:textColor">@color/b0</item>
        <item name="android:textSize">23sp</item>
    </style>

    <!--输入框-->
    <style name="input_box">
        <item name="android:textCursorDrawable">@drawable/cursor_blue4</item>
        <item name="android:background">@null</item>
        <item name="android:textColorHint">@color/gray_login</item>
    </style>

    <!--输入手机号-->
    <style name="input_phoneNumber" parent="black_16sp">
        <item name="android:textCursorDrawable">@drawable/cursor_blue4</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">11</item>
        <item name="android:background">@null</item>
        <item name="android:textColorHint">@color/gray_login</item>
    </style>

    <!--输入验证码-->
    <style name="input_vertify_code" parent="black_15sp">
        <item name="android:inputType">number</item>
        <item name="android:textCursorDrawable">@drawable/cursor_blue4</item>
        <item name="android:maxLength">6</item>
        <item name="android:background">@null</item>
        <item name="android:textColorHint">@color/gray_login</item>
    </style>

    <!--输入密码-->
    <style name="input_passworder" parent="black_16sp">
        <item name="android:inputType">textWebPassword</item>
        <item name="android:textCursorDrawable">@drawable/cursor_blue4</item>
        <item name="android:maxLength">16</item>
        <item name="android:background">@null</item>
        <item name="android:textColorHint">@color/gray_login</item>
    </style>

    <!--长按钮-->
    <style name="long_btn" parent="white_16sp">
        <item name="android:layout_width">@dimen/x996</item>
        <item name="android:layout_height">@dimen/y120</item>
        <item name="android:background">@drawable/btn_circular_green1</item>
        <item name="android:alpha">0.5</item>
        <item name="android:enabled">false</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <!--进度-->
    <style name="Dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:background">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="progress_bar_style" parent="@android:style/Widget.ProgressBar">
        <item name="android:indeterminateDrawable">@mipmap/loading</item>
    </style>

    <!--透明弹窗-->
    <style name="Dialog_tran" parent="android:style/Theme.Dialog">
        <!--背景颜色及透明程度-->
        <item name="android:windowBackground">@drawable/dialog_ciecular_b5</item>
        <item name="android:windowFrame">@null</item><!--边框-->
    </style>

    <style name="ActionSheetDialog" parent="android:Theme.Dialog">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!--申诉找回密码条目布局-->
    <style name="appeal_item_layput">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/y126</item>
    </style>

    <!--申诉找回密码条目名称-->
    <style name="appeal_item_name" parent="black_16sp">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--申诉找回密码条目内容-->
    <style name="appeal_item_content" parent="black_15sp">
        <item name="android:layout_marginStart">@dimen/x84</item>
        <item name="android:textColorHint">@color/gray_login</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@null</item>
    </style>

    <style name="statusBarStyle" parent="@android:style/Theme.DeviceDefault.Light">
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <!--校友互帮弹出菜单-->
    <style name="popwindow_anim">
        <item name="android:windowEnterAnimation">@anim/popwindow_show</item>
    </style>

    <!--校友互帮弹出菜单-->
    <style name="publish_anim">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <!--输入框选项栏-->
    <style name="input_select">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- 搜索界面主题 -->
    <style name="global_search_bg" parent="@style/AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/global_bg</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
    </style>


    <!--IM-->
    <style name="list_view" parent="@android:style/Widget.ListView">
        <item name="android:scrollbarThumbVertical">@drawable/nim_scrollbar_handle_holo_dark</item>
        <item name="android:scrollbarThumbHorizontal">@drawable/nim_scrollbar_handle_holo_dark
        </item>
    </style>

    <style name="dialog_default_style" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="dialog_title_text_style">
        <item name="android:textSize">@dimen/big_text_size</item>
        <item name="android:textColor">@color/color_activity_blue_bg</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">@dimen/dialog_text_margin_horizontal</item>
        <item name="android:paddingRight">@dimen/dialog_text_margin_horizontal</item>
        <item name="android:paddingTop">@dimen/dialog_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/dialog_padding_vertical</item>
    </style>

    <style name="custom_dialog_message_text_style">
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textColor">@color/color_black_333333</item>
        <item name="android:paddingLeft">@dimen/dialog_text_margin_horizontal</item>
        <item name="android:paddingRight">@dimen/dialog_text_margin_horizontal</item>
        <item name="android:paddingTop">@dimen/custom_dialog_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/custom_dialog_padding_vertical</item>
        <item name="android:background">@drawable/nim_list_item_selector</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="horizontal_deep_thick_divider">
        <item name="android:layout_height">1dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:background">@color/color_gray_d9d9d9</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="grey">
        <item name="android:textColor">@color/g0</item>
    </style>

    <style name="white">
        <item name="android:textColor">@color/w0</item>
    </style>

    <style name="Widget.Design.AppBarLayout" parent="android:Widget">
        <item name="elevation">0dp</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>

</resources>
